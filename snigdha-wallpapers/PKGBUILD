
# Maintainer: Eshan Roy <src.eshan@gmail.com>

pkgname=snigdha-wallpapers
org=snigdhalinux
branch=master
pkgver=r3.aedacae
pkgrel=1
pkgdesc="Snigdha OS Wallpapers"
arch=('any')
url="https://github.com/$org/$pkgname"
license=('GPLv3')
makedepends=('git')
source=("git+https://github.com/$org/$pkgname.git")
sha256sums=('SKIP')

pkgver() {
	cd "$srcdir/$pkgname" || exit
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	cd "${pkgname}" || exit
	install -d "${pkgdir}/usr/share/backgrounds/$pkgname"
	cp -r src/$pkgname/* "${pkgdir}/usr/share/backgrounds/$pkgname"
	install -d "${pkgdir}/usr/share/gnome-background-properties"
	cp -r "src/$pkgname/snigdhaos-wallpapers.xml" "${pkgdir}/usr/share/gnome-background-properties/snigdhaos-wallpapers.xml"
}
