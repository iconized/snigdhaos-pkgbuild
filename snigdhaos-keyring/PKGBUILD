
# Maintainer : Eshan Roy <src.eshan@gmail.com>

pkgname=snigdhaos-keyring
org=snigdhalinux
pkgver=1
pkgrel=1
pkgdesc="Snigdha OS keyring"
arch=(any)
url="https://raw.githubusercontent.com/snigdhalinux/snigdhaos-pkgbuild/master/$pkgname"
license=('GPL3')
groups=(snigdhaos)
install=$pkgname.install
[ -r $install ] || curl -o $install -s --max-time 30 $url/$install

source=(
  $url/snigdhaos.gpg
  $url/$install
  )

sha512sums=('SKIP'
            'SKIP')
package() {
    local destdir=usr/share/pacman/keyrings

    install -d $pkgdir/$destdir
    install -Dm644 snigdhaos.gpg  $pkgdir/$destdir/snigdhaos.gpg
}
