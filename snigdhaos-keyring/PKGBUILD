pkgname=snigdhaos-keyring
org=snigdhalinux
url="https://github.com/$org/$pkgname"
pkgver=1.0.0
pkgrel=1
pkgdesc="Snigdha OS Keyring"
arch=('any')
license=("GPL3")
source=("$pkgname.tar.gz")
sha512sums=('ff7d48a0d62bfdf06959aca3c5a3f7dd96548ac20bb6c7b1ca13f713359887e49299fd606554f076f437609879538d17d8f47b42a9e2270ebb9d0935718baf44')

package() {
  mkdir -p "${pkgdir}/usr/share/pacman/keyrings"

  cp -rf "${srcdir}"/usr/share/pacman/keyrings/* "${pkgdir}/usr/share/pacman/keyrings/"
}
